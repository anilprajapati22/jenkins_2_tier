def tagid = null
def userInput = false
pipeline{
    agent any
    stages{
        stage("Input"){
            agent none
            steps{
                script{
                    tagid = input(
                        message : 'Enter the Tag ID',
                        ok : 'Submit',
                        parameters : [string(defaultValue: '32' , name: 'TAG_ID')]
                    )
                }
            }
        }
        stage("Deploy"){
            agent any
            steps{
                sh "docker container rm -f php-server || true"
                sh "docker pull 590852515231.dkr.ecr.us-east-1.amazonaws.com/anilp-sgn-repo-docker:build-${tagid}"
                sh "docker run -d -p 80:80 --name php-server 590852515231.dkr.ecr.us-east-1.amazonaws.com/anilp-sgn-repo-docker:build-${tagid}"
            }
        }
        stage("Approval"){
            agent none
            steps{
                script {
                    userInput = input(id: 'Proceed1', message: 'Promote build?', parameters: [[$class: 'BooleanParameterDefinition', defaultValue: true, description: '', name: 'Please confirm you agree with this']])
                    echo 'userInput: ' + userInput
                    if(userInput == true) {
                    } else {
                        echo "Action was aborted."
                    }
                }
            }
        }
        stage("CLEANUP"){
            steps{
            sh "docker container rm -f php-server || true"
            sh "docker container rm -f php-server-prod || true"        
            sh "docker run -d -p 80:80 --name 590852515231.dkr.ecr.us-east-1.amazonaws.com/anilp-sgn-repo-docker:build-${tagid}"
            sh "docker image prune -a --force"
            }
        }
    }
}